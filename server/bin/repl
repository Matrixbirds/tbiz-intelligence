#!/usr/bin/env node
const Module = require('../sprockets').declare
const Promise = Module.bluebird.Promise
const mixin = Object.assign
Promise.config({
    longStackTraces: false
})

if (!process.env.NODE_ENV) process.env.NODE_ENV = 'dev'
if (require.main === module) {
    const repl = require('repl')
    const {context} = require('../app')
    mixin(context, {
        moment: Module.moment,
        Promise,
        axios: Module.axios
    })
    mixin(repl.start(':> ').context, context)
}

process.on('uncaughException', (err) => {
    console.error('uncauchException', err)
})

process.on('unhandleRejection', (err) => {
    console.error('unhandleRejection', err)
})
